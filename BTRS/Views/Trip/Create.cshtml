@model BTRS.Models.Trip

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    body {
        background-color: #f0f8ff; /* Alice Blue background */
        color: #001f3f; /* Dark Blue text */
    }

    h1 {
        color: #1565c0; /* Dark blue title color */
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-primary {
        background-color: #1565c0; /* Dark blue button background */
        border-color: #1565c0; /* Dark blue button border color */
        color: #ffffff; /* Button text color */
    }

    .btn-secondary {
        background-color: #1565c0; /* Dark blue button background */
        border-color: #1565c0; /* Dark blue button border color */
        color: #ffffff; /* Button text color */
    }

</style>

<h1 class="my-4 text-center text-primary">Create Trip</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="border p-4 bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="BusNum" class="control-label text-primary">Bus Number</label>
                <input asp-for="BusNum" class="form-control" />
                <span asp-validation-for="BusNum" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="dest" class="control-label text-primary">Destination</label>
                <input asp-for="dest" class="form-control" />
                <span asp-validation-for="dest" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StartD" class="control-label text-primary">Departure Date</label>
                <input asp-for="StartD"  class="form-control" />
                <span asp-validation-for="StartD" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EndD" class="control-label text-primary">Arrival Date</label>
                <input asp-for="EndD"  class="form-control" />
                <span asp-validation-for="EndD" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
