@model IEnumerable<BTRS.Models.Trip>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f0f5fe;
        color: #37474f;
    }

    .container {
        text-align: center;
        margin-top: 5%;
    }

    .btn-group {
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        background-color: #f0f5fe;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .thead-dark th {
        background-color: #1565c0; /* Header background color */
        color: #ffffff; /* Header text color */
    }

    .table td,
    .table th {
        text-align: center;
        padding: 15px;
    }

    .btn {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #1565c0; /* Dark blue button background */
        border-color: #1565c0; /* Dark blue button border color */
        color: #ffffff; /* Button text color */
    }

    .text-primary {
        color: #1565c0; /* Title color */
        text-align: center;
        margin-bottom: 30px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

</style>



<div class="container">
    <h1 class="text-center text-primary mb-4">Available Trips</h1>

    <div class="row mb-3">
        <div class="col-md-12">

        </div>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Bus Number</th>
                <th>Destination</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BusNum)</td>
                    <td>@Html.DisplayFor(modelItem => item.dest)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartD)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndD)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                            <a asp-action="BusDets" asp-route-id="@item.Id" class="btn btn-success">Bus</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="btn-group">
        <a asp-action="Create" class="btn btn-primary mr-2" class="a">Create New</a>
        <a asp-action="Index" asp-controller="Bus" class="btn btn-primary">Bus List</a>
    </div>
</div>

